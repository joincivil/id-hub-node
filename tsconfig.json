{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "composite": true,
    "rootDir": "src",
    "outDir": "build"
  },
  "exclude": ["**/__tests__/**/*", "**/build/**/*"]
}
